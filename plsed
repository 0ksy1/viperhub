	humanoid.WalkSpeed = isEnabled and speedValue or defaultSpeed
end

humanoid:GetPropertyChangedSignal("WalkSpeed"):Connect(function()
	updateSpeed()
end)


player.CharacterAdded:Connect(function(char)
