			page.Visible = false
		end
		pages["Main"].Visible = true
	else
		TabButtonsFrame.Visible = false
		for _, page in pairs(pages) do
			page.Visible = false
		end
		local tween = TweenService:Create(mainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 500, 0, 50)})
		tween:Play()
	end
	isMinimized = not isMinimized
end)

